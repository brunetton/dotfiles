[user]
	name = Bruno
#	email = xxx  => to be defined manually for each project (using includeIf)
    useConfigOnly = true  # do not auto-generate user@machine emails
	email = bruno@brunetton.org

[includeIf "gitdir:~/dev/"]
    path = ~/dev/gitconfig

[includeIf "gitdir:~/.passwords/"]
    path = ~/.passwords/gitconfig

[includeIf "gitdir:~/dev/jailbreak/"]
    path = ~/dev/jailbreak/gitconfig

[includeIf "gitdir:~/dev/jailbreak/dbnomics/"]
    path = ~/dev/jailbreak/dbnomics/gitconfig

[alias]
    ci = commit
    co = checkout
    st = status
    chp = cherry-pick
    sed = !sh -c 'git grep --null --full-name --name-only -e \"$1\" | xargs -0 perl -i -p -e \"s/$1/$2/g\"' -
	log = log --abbrev-commit
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all

[color]
    ui = auto

[diff]
    tool = meld
    renames = 0
    noprefix = true

[push]
    # push to remote branch that have the same name as current one (don't need to do git branch --set-upstream-to=origin/foo)
    default = current

[merge]
    #conflictstyle = diff3
    tool = meld
    # I like to keep branches by default, and use '--no-ff" when I want to fast forward
    ff = false

[fetch]
    prune = true


# reuse recorded resolution
# http://git-scm.com/blog/2010/03/08/rerere.html
[rerere]
    enabled = 1

[grep]
    lineNumber = 1

[core]
    excludesfile = ~/.gitignore
    # no output to less by default
    pager = cat
    editor = vim
[gui]
    spellingdictionary = none
	fontui = -family \"nimbus sans l\" -size 11 -weight normal -slant roman -underline 0 -overstrike 0
[pull]
    # I don't want to have merge commits when pulling code
    rebase = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

# This next lines include Netlify's Git Credential Helper configuration in your Git configuration.
[include]
  path = /home/bruno/.netlify/helper/git-config
[diff "jupyternotebook"]
	command = git-nbdiffdriver diff
[merge "jupyternotebook"]
	driver = git-nbmergedriver merge %O %A %B %L %P
	name = jupyter notebook merge driver
[difftool "nbdime"]
	cmd = git-nbdifftool diff \"$LOCAL\" \"$REMOTE\" \"$BASE\"
[difftool]
	prompt = false
[mergetool "nbdime"]
	cmd = git-nbmergetool merge \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
[mergetool]
	prompt = false
[cola]
	spellcheck = true
[init]
	defaultBranch = main
