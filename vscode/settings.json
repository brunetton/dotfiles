// Placez vos paramètres dans ce fichier pour remplacer les paramètres par défaut
{
    "editor.fontSize": 13,
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        ".vscode": true,
        ".ipynb*": true,
        "**/*.{pyc,pyo}": { "when": "$(basename).py" }
    },
    "terminal.integrated.fontSize": 11,
    "window.zoomLevel": 0,
    "python.formatting.autopep8Args": [
        "--max-line-length=120"
    ],
    "python.linting.pylintArgs": [
        "--rcfile",
        "~/dev/dbnomics/code-style/pylintrc"
    ],
    "window.menuBarVisibility": "toggle",
    "editor.minimap.enabled": false,
    // "editor.codeLens": false,  // Si false: cache les outils résolution conflicts Git
    "git.countBadge": "tracked",
    "workbench.activityBar.visible": true,
    // "gitlens.codeLens.enabled": false,
    "files.trimTrailingWhitespace": true,
    "editor.renderWhitespace": "all",
    "files.associations": {
        "*.nemo_action": "ini",
    },
    "elm.formatOnSave": true,
    "cSpell.userWords": [
        "dataset",
        "dbnomics",
        "etree",
        "iterfind",
        "openpyxl",
        "shutil",
        "toolz"
    ],
    "[python]": {
        "editor.rulers": [
            120
        ]
    },
    "[javascript]": {
        "editor.formatOnSave": true
    },
    "workbench.startupEditor": "none",
    "arduino.path": "/home/bruno2/bin/bin/arduino-1.8.8",
    "breadcrumbs.enabled": true,
    "arduino.additionalUrls": [
        "http://drazzy.com/package_drazzy.com_index.json"
    ]
}